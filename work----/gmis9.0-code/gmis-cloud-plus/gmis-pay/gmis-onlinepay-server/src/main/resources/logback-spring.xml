<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="com/cdqckj/gmis/log/logback/gmis-defaults.xml"/>

    <springProfile name="test,docker,prod">
        <logger name="com.cdqckj.gmis.order.controller" additivity="true" level="${log.level.controller}">
            <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
        </logger>
        <logger name="com.cdqckj.gmis.order.service" additivity="true" level="${log.level.service}">
            <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
        </logger>
        <logger name="com.cdqckj.gmis.order.dao" additivity="false" level="${log.level.dao}">
            <appender-ref ref="ASYNC_DAO_APPENDER"/>
        </logger>
    </springProfile>

    <springProfile name="dev">
        <logger name="com.cdqckj.gmis.order.controller" additivity="true" level="INFO">
            <appender-ref ref="CONTROLLER_APPENDER"/>
        </logger>
        <logger name="com.cdqckj.gmis.order.service" additivity="true" level="INFO">
            <appender-ref ref="SERVICE_APPENDER"/>
        </logger>
    </springProfile>
</configuration>
